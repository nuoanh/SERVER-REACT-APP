<script>
    $(document).ready(function () {
        $(".btn-sign-up").click(function () {
            $(".err-name").html(" ")
            $(".err-password").html(" ")
            $(".err-email").html(" ")
            $(".err-repassword").html(" ")

            let name = $(".name").val();
            let email = $(".email").val();
            let password = $(".password").val();
            let repassword = $(".repassword").val();
            let permit = true;
            if (name == "") {
                $(".err-name").html('Chưa điền tên')
                permit = false;
            }
            if (email == "") {
                $(".err-email").html('Chưa điền email')
                permit = false;
            }
            if (password == "") {
                $(".err-password").html('Chưa điền mật khẩu')
                permit = false;
            }
            if (repassword == "") {
                $(".err-repassword").html('Chưa điền mật khẩu')
                permit = false;
            }
            if (password != repassword) {
                $(".err-repassword").html('mật khẩu không khớp')
                permit = false;
            }
            if (permit == true) {
                let form = new FormData();
                form = {
                    name: name,
                    email: email,
                    password: password,
                }
                $.ajax({
                    url: '/sign-up',
                    async: true,
                    type: 'POST',
                    data: form,
                    dataType: "json",
                    encode: true,
                    responseType: 'application/json'
                }).done(function (data) {
                    console.log(data);
                    if (data == 'success') {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Đăng kí thành công',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        setTimeout(function () {
                            window.location.replace("/login");
                        }, 2000)
                    }
                })
            }
        })
    })
</script>

