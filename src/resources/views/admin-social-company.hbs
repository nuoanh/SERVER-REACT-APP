<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liên kết link đến các trang social</h4>
                    <p class="card-description">
                        copy link đặt vào đây
                    </p>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control link-fb" placeholder="Đường dẫn liên kết facebook"
                                aria-label="Recipient's username">
                            <p class="err-fb-company" style="color: red"></p>
                            <div class="input-group-append">
                                <button class="btn btn-sm btn-facebook" type="button">
                                    <i class="ti-facebook"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control link-ins" placeholder="Đường dẫn liên kết ins"
                                aria-label="Recipient's username">
                            <p class="err-ins-company" style="color: red"></p>

                            <div class="input-group-append">
                                <button class="btn btn-sm btn-instagram" type="button">
                                    <i class="ti-instagram"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control link-ytb" placeholder="Đường dẫn liên kết youtube"
