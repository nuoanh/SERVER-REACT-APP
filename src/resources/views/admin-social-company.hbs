                            <p class="err-ytb-company" style="color: red"></p>

                            <div class="input-group-append">
                                <button class="btn btn-sm btn-youtube" type="button">
                                    <i class="ti-youtube"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control link-more" placeholder="Đường dẫn liên kết khác"
                                aria-label="Recipient's username">
                            <p class="err-more-company" style="color: red"></p>

                            <div class="input-group-append">
                                <button class="btn btn-sm btn" type="button">
                                    <i class="ti"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-inverse-primary btn-fw btn-update-social">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        inforCompany()
        //function get infor company
        function inforCompany() {
            $(".layout").css('display', 'block')
            //get-inf-company
            $.ajax({
                url: '/admin/get-inf-company',
                async: true,
                type: 'GET',
                dataType: "json",
                encode: true,
            }).done(function (data) {
                console.log(data);
                if (data.social) {
                    let social = data.social;
                    $(".link-more").val(social.more)
                    $(".link-ytb").val(social.youtube)
                    $(".link-ins").val(social.instagram)
                    $(".link-fb").val(social.facebook)
                }
                $(".layout").hide()
            })
        }

        //update social
        $(".btn-update-social").click(function () {
            let linkFacebook = $(".link-fb").val()
            let linkInstagram = $(".link-ins").val()
            let linkYoutube = $(".link-ytb").val()
            let linkMore = $(".link-more").val()

            let accept = true;
            $(".err-fb-company").html(" ")
            $(".err-ins-company").html(" ")
            $(".err-ytb-company").html(" ")

            let form = new FormData();
            form = {
                _id: '64312a497270f261127e15ad',
                obj: {
                    social: {
                        facebook: linkFacebook,
                        instagram: linkInstagram,
                        youtube: linkYoutube,
                        more: linkMore
                    }
                }

            }
            if (linkFacebook == "") {
                $(".err-fb-company").html("chưa điền link fb !");
                accept = false;
            }
            if (linkInstagram == "") {
                $(".err-ins-company").html("chưa điền link ins !");
                accept = false;
            }
            if (linkYoutube == "") {
                $(".err-ytb-company").html("chưa điền ytb!");
                accept = false;
            }
            if (linkMore == "") {
                $(".err-ytb-company").html("chưa điền ngoài ra!");
                accept = false;
            }


            if (accept == true) {
                //update
                $(".layout").css('display', 'block');

                //call ajax requesst post
                $.ajax({
                    url: '/admin/update-inf-company',
                    async: true,
                    type: 'POST',
                    dataType: "json",
                    data: form,
                    encode: true,
                }).done(function (data) {
                    if (data == 'success') {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Cập nhật thành công',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        $(".layout").hide();
                    } else {
                        console.log(data)
                    }
                })
            }
        })



        $(".layout").click(function () {
            $(this).hide();
        })

    })
</script>