<script>
    $(document).ready(function () {
        $(".btn-login").click(function () {
            $(".err-email").html(" ");
            $(".err-password").html(" ");
            $(".err-login").html(" ");
            let permit = true;
            let email = $(".email").val();
            let password = $(".password").val();
            if (email == "") {
                permit = false;
                $(".err-email").html('Chưa điền email ');
            }
            if (password == "") {
                permit = false;
                $(".err-password").html('Mật khẩu đang trống');
            }
            if (permit == true) {
                let form = new FormData();
                form = {
                    email: email,
                    password: password,
                }
                $.ajax({
                    url: '/login',
                    async: true,
                    type: 'POST',
                    data: form,
                    dataType: "json",
                    encode: true,
                    responseType: 'application/json'
                }).done(function (data) {
                    if (data != 'error') {
                        window.location.replace("/");
                    } else {
                        $(".err-login").html('sai tài khoản hoặc mật khẩu !')
                    }
                })
            }
        })
    })
</script>

