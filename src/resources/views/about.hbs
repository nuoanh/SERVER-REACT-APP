<script>
    loadInfCompany()
    function loadInfCompany() {
        $(".layout").css('display', 'block')
        $.ajax({
            url: '/get-inf-company',
            async: true,
            type: 'GET',
            dataType: "json",
            encode: true,
            responseType: 'application/json'
        }).done(function (data) {
            let aboutPage = data.aboutPage;
            console.log(aboutPage)
            $(".title-about").html(aboutPage.title);
            $(".content-about").html(aboutPage.content);
            $(".image-about-page").attr('src', aboutPage.image)
            let people = data.aboutPage.employee;
            let html = "";
            people.map((per) => {
                html += `
            <div class="col-sm-6 col-lg-3">
                <div class="hover-team">
                    <div class="our-team"> <img src="`+per.image +`" alt="" />
                        <div class="team-content">
                            <h3 class="title">`+per.name+`</h3> <span class="post">`+per.role+`</span>
                        </div>

                        <div class="icon"> <i class="fa fa-plus" aria-hidden="true"></i> </div>
                    </div>
                    <div class="team-description">
                        <p>`+per.descriptions+`</p>
                    </div>
                    <hr class="my-0">
                </div>
            </div>`;
            })
            $(".about-me").append(html);
        })
    }
</script>
